<!DOCTYPE html>
<html lang="en">
{{template "head.tmpl"}}
<body>
  <div class="container">
    {{template "nav.tmpl" .}}
    
    <h1>Messages</h1>

    <table class="table">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Created at</th>
        </tr>
      </thead>
      <tbody>

        {{range .data}}
          <tr class="message-row">
            <td><a href="/messages/{{ .PartitionKey }}">{{ .PartitionKey }}</a></td>
            <td>{{ .Timestamp }}</td>
          </tr>
        {{end}}
        
      </tbody>
    </table>

    {{template "footer.tmpl" .}}
  </div>
</body>
</html>